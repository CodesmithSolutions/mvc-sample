@{
    @model Codesmith.MvcSample.Web.Models.DocumentViewModel
}

<h1>Edit Document</h1>
@using (Html.BeginForm("EditDocument", "Document"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Document.Name)
        @Html.EditorFor(model => model.Document.Name, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Document.Name, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Document.Type)
        @Html.EditorFor(model => model.Document.Type, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Document.Type, "", new { @class = "text-danger" })
    </div>
  
    <input type="submit" value="Create" class="btn btn-default" />
}